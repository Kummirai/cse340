<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (user && user.account_id) { %>
    <!-- Logged-in User View -->
    <a
      title="View your account"
      href="/account/management"
      class="welcome-link"
    >
      Welcome <%= user.account_firstname || 'User' %> <% if
      (user.account_lastname) { %> <%= user.account_lastname %> <% } %>
    </a>

    <% if (user.account_type && user.account_type !== 'Client') { %>
    <span class="account-type">(<%= user.account_type %>)</span>
    <% } %>

    <a title="Click to log out" href="/account/logout">Logout</a>

    <% } else { %>
    <!-- Guest View -->
    <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>
