<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.client) { %>
    <!-- Show these when client is logged in -->
    <a title="View your account" href="/account/management"
      >Welcome <%= locals.client.clientFirstname %></a
    >
    <a title="Click to log out" href="/account/logout">Logout</a>
    <% } else { %>
    <!-- Show this when client is logged out -->
    <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>
