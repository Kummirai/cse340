<!--Register form-->
<h1><%= title %></h1>
<div class="container">
  <form id="registerForm" action="/account/register" method="post">
    <div class="form-group">
      <label for="username"
        ><span>First Name</span>
        <input
          type="text"
          id="username"
          name="username"
          value="<%= locals.firstname %>"
          required
        />
      </label>
      <label for="lastname"
        ><span>Last Name</span>
        <input
          type="text"
          id="lastname"
          name="lastname"
          value="<%= locals.lastname %>"
          required
        />
      </label>
      <label for="email"
        ><span>Email Address</span>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= locals.email %>"
          required
        />
      </label>
    </div>
    <div class="form-group">
      <label for="password"
        ><span>Password</span>
        <input
          type="password"
          id="password"
          name="password"
          value="<%= locals.password %>"
          class="form-control"
          required
        />
      </label>
    </div>
    <p>
      Password must be minimum of 12 characters and include 1 capital letter , 1
      number and 1 special character
    </p>
    <button id="show-password">Show password</button>
    <button type="submit" class="btn btn-primary">Register</button>
    <div class="form-group">
      <p>Already have an account? <a href="/account/login">Login here</a>.</p>
    </div>
  </form>
</div>
