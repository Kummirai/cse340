<!--Register form-->
<h1><%= title %></h1>
<div class="container">
  <form id="registerForm" action="/account/register" method="post">
    <div class="form-group">
      <label for="email"
        ><span>Email Address:</span>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= locals.email %>"
          required
        />
      </label>
    </div>
    <div class="form-group">
      <label for="password"
        ><span>Password</span>
        <input
          type="password"
          id="password"
          name="password"
          value="<%= locals.password %>"
          class="form-control"
          required
        />
      </label>
    </div>
    <div class="form-group">
      <label for="confirmPassword"
        ><span>Confirm Password</span>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          value="<%= locals.confirmPassword %>"
          class="form-control"
          required
        />
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <div class="form-group">
      <p>Already have an account? <a href="/account/login">Login here</a>.</p>
    </div>
  </form>
</div>
