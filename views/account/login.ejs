<!--Login ejs view-->
<%# Display flash messages if any %>

<h1><%= title %></h1>
<%- messages() %>
<div class="container">
  <form id="loginForm" action="/account/login" method="post">
    <div class="form-group">
      <label for="email"
        ><span>Email Address:</span>
        <input
          type="email"
          id="email"
          name="email"
          value="<%=locals.email %>"
          required
        />
      </label>
    </div>
    <div class="form-group">
      <label for="password"
        ><span>Password</span>
        <input
          type="password"
          id="password"
          name="password"
          value="<%=locals.password %>"
          class="form-control"
          required
        />
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <div class="form-group">
      <p>
        Don't have an account? <a href="/account/register">Register here</a>.
      </p>
    </div>
  </form>
</div>
