<h1><%-title %></h1>
<%-messages() %> <% if (locals.user) { %>
<h2>
  Welcome <%= user.account_firstname %> <%= user.account_lastname || '' %>
</h2>
<p>You are logged in!</p>

<div class="account-info">
  <p>
    <strong>Name:</strong> <%= user.account_firstname %> <%=
    user.account_lastname || '' %>
  </p>
  <p><strong>Email:</strong> <%= user.account_email %></p>
  <p><strong>Account Type:</strong> <%= user.account_type %></p>
</div>

<div class="account-actions">
  <a href="/account/edit/<%= user.account_id %>">Edit account information</a>
  <br /><br />
  <a href="/account/logout">Logout</a>
</div>
<% } else { %>
<p>Please <a href="/account/login">log in</a> to access your account.</p>
<% } %>
