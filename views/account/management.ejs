<h1 class="account-title"><%- title %></h1>
<%- messages() %> <% if (locals.user) { %>
<div class="account-container">
  <div class="account-header">
    <h2 class="welcome-message">
      Welcome
      <span class="user-name"
        ><%= user.account_firstname %> <%= user.account_lastname || '' %></span
      >
    </h2>
  </div>

  <div class="account-info">
    <div class="info-card">
      <h3>Account Information</h3>
      <p class="info-item">
        <span class="info-label">Name:</span>
        <span class="info-value"
          ><%= user.account_firstname %> <%= user.account_lastname || ''
          %></span
        >
      </p>
      <p class="info-item">
        <span class="info-label">Email:</span>
        <span class="info-value"><%= user.account_email %></span>
      </p>
      <p class="info-item">
        <span class="info-label">Account Type:</span>
        <span class="info-value"><%= user.account_type %></span>
      </p>
    </div>
  </div>

  <div class="account-actions">
    <a href="/account/update/<%= user.account_id %>" class="btn btn-edit"
      >Edit Account Information</a
    >
  </div>
</div>
<% } else { %>
<div class="login-prompt">
  <p>
    Please <a href="/account/login" class="login-link">log in</a> to access your
    account.
  </p>
</div>
<% } %>
